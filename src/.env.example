# =============================================================================
# DSCR Platform API - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# DataTree API (First American)
# =============================================================================
# Get credentials from: https://developer.firstam.io
# Used for: AVM (Automated Valuation Model), property data

DATATREE_APP_ID=your_datatree_app_id
DATATREE_APP_KEY=your_datatree_app_key
DATATREE_BASE_URL=https://api.firstam.io
DATATREE_TIMEOUT=30000

# =============================================================================
# PropertyReach API
# =============================================================================
# Get credentials from: https://www.propertyreach.com/property-api
# Used for: Property details, owner info, mortgage data, STR detection

PROPERTYREACH_API_KEY=your_propertyreach_api_key
PROPERTYREACH_BASE_URL=https://api.propertyreach.com/v1
PROPERTYREACH_TIMEOUT=30000

# =============================================================================
# Database (Neon Postgres)
# =============================================================================
# Get connection string from: https://neon.tech
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# =============================================================================
# Cache (Upstash Redis)
# =============================================================================
# Get connection string from: https://upstash.com
REDIS_URL=rediss://default:token@host:port

# =============================================================================
# Firebase Authentication
# =============================================================================
# Get from Firebase Console > Project Settings > Service Accounts
FIREBASE_CONFIG={"type":"service_account","project_id":"..."}

# =============================================================================
# GCP (Google Cloud Platform)
# =============================================================================
GCP_PROJECT_ID=your-project-id
GCS_BUCKET_DOCUMENTS=your-project-documents
